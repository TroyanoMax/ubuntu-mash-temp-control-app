<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:layout_gravity="center_vertical">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_gravity="center_vertical"
                android:paddingLeft="10sp" android:paddingRight="10sp" android:paddingTop="10sp">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="Thermometer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_weight="1"
                        android:textAlignment="center" android:textSize="34sp"
                        app:layout_constraintBottom_toTopOf="@+id/progress_temp"
                        app:layout_constraintEnd_toEndOf="@+id/progress_temp"
                        app:layout_constraintStart_toStartOf="@+id/progress_temp"/>
                <TextView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="-55°"
                        android:ems="10"
                        android:id="@+id/minTextView"
                        android:layout_weight="1"
                        android:gravity="center|center_vertical"
                        app:layout_constraintStart_toStartOf="@+id/progress_temp"
                        app:layout_constraintBottom_toBottomOf="parent" android:minHeight="48dp"
                        android:textSize="20sp"/>
                <ProgressBar
                        android:id="@+id/progress_temp"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:indeterminateOnly="false"
                        android:progressDrawable="@drawable/circle"
                        tools:progress="50"
                        tools:max="12500"
                        tools:min="-5500"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        tools:text="50°"
                        android:id="@+id/progress_temp_text"
                        android:textStyle="bold"
                        android:textSize="48sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/progress_temp"
                        app:layout_constraintStart_toStartOf="@+id/progress_temp"/>
                <TextView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="125°"
                        android:ems="10"
                        android:id="@+id/maxTextView"
                        android:layout_weight="1"
                        android:gravity="center|center_vertical"
                        app:layout_constraintEnd_toEndOf="@+id/progress_temp"
                        app:layout_constraintBottom_toBottomOf="parent" android:minHeight="48dp"
                        android:textSize="20sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:paddingTop="30sp" android:paddingRight="10sp"
                android:paddingLeft="10sp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Min"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_weight="1"
                        android:textSize="24sp" android:textAlignment="center"
                />
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button android:id="@+id/dec_min_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/button_dec_txt"
                        android:layout_weight="1" android:textColor="#000000"/>
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/minTextNumber"
                        android:layout_weight="2"
                        android:textAlignment="center"
                        android:text="70°"
                        android:minHeight="48dp"/>
                <Button android:id="@+id/inc_min_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/button_inc_txt"
                        android:layout_weight="1" android:textColor="#000000"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Max"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        android:layout_weight="1"
                        android:textSize="24sp"
                        android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button android:id="@+id/dec_max_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/button_dec_txt"
                        android:layout_weight="1"
                        android:textColor="#000000"/>
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/maxTextNumber"
                        android:layout_weight="2"
                        android:textAlignment="center"
                        android:text="74°"
                        android:minHeight="48dp"/>
                <Button android:id="@+id/inc_max_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/button_inc_txt"
                        android:layout_weight="1" android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30sp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1">
                <TextView
                        android:text="Alarm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1">
                <androidx.appcompat.widget.SwitchCompat
                        android:text="Between range"
                        android:layout_width="match_parent"
                        android:layout_height="54sp" android:id="@+id/betAlarmSwitch"
                        android:textSize="24sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1">
                <androidx.appcompat.widget.SwitchCompat
                        android:text="Over max value"
                        android:layout_width="match_parent"
                        android:layout_height="54sp" android:id="@+id/uppAlarmSwitch"
                        android:textSize="24sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>